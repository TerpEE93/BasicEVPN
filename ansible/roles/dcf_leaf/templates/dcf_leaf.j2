/* Configuration automatically generated by Ansible from template dcf_leaf.j2 */
system {
    host-name {{ hostname }};
    root-authentication {
        encrypted-password {{ root_pw_encrypted }}; ## SECRET-DATA
    }
    login {
        user {{ admin_user.name }} {
            uid 2001;
            class super-user;
            authentication {
                encrypted-password {{ admin_user.pw_encrypted }}; ## SECRET-DATA
            }
        }
    }
    services {
        ssh {
            root-login allow;
        }
        netconf {
            ssh;
        }
        rest {
            http {
                port 8080;
            }
            enable-explorer;
        }
    }
    syslog {
        user * {
            any emergency;
        }
        file messages {
            any notice;
            authorization info;
        }
        file interactive-commands {
            interactive-commands any;
        }
    }
    extensions {
        providers {
            juniper {
                license-type juniper deployment-scope commercial;
            }
        }
    }
}
interfaces {
{% for interface in host_interfaces %}
    {{ interface.name }} {
        description "{{ interface.name}}: Link to hosts";
        unit 0 {
            family ethernet-switching {
                interface-mode {{ interface.mode }};
                vlan {
                    members [ {% for vlan in interface.vlans %}{{ vlan }} {% endfor %} ];
                }
            }
        }
    }
{% endfor %}
{% for interface in spine_interfaces %}
    {{ interface.name }} {
        description "{{ interface.name }}: Link to Spine {{ interface.peer_node_id }}";
        unit 0 {
            family inet {
                address 10.{{ interface.peer_node_id }}.{{ node_id }}.2/30;
            }
        }
    }
{% endfor %}
    em0 {
        unit 0 {
            family inet {
                address {{ mgt.prefix }}.{{ node_id }}/24;
            }
        }
    }
{% if platform == "vQFX" %}
    em1 {
        unit 0 {
            family inet {
                address 169.254.0.2/24;
            }
        }
    }
{% endif %}
    lo0 {
        unit 0 {
            family inet {
                address {{ leaf_lo_prefix }}.{{ node_id }}/32;
            }
        }
    }
}
forwarding-options {
    storm-control-profiles default {
        all;
    }
}
routing-options {
    static {
        route {{ mgt.default_route }} next-hop {{ mgt.default_nh }};
    }
    router-id {{ leaf_lo_prefix }}.{{ node_id }};
    autonomous-system {{ site_asn }};
    forwarding-table {
        export PFE-LB;
    }
}
protocols {
    mpls {
{% for interface in spine_interfaces %}
        interface {{ interface.name }}.0;
{% endfor %}
}
    bgp {
        group UNDERLAY {
            type external;
            family inet {
                unicast;
            }
            export UNDERLAY-EXPORT;
            local-as 65{{ node_id }};
            bfd-liveness-detection {
                minimum-interval 1000;
                multiplier 3;
                session-mode single-hop;
            }
            multipath multiple-as;
{% for interface in spine_interfaces %}
            neighbor 10.{{ interface.peer_node_id }}.{{ node_id }}.1 {
                peer-as 650{{ interface.peer_node_id }};
            }
{% endfor %}
        }
        group OVERLAY {
            type internal;
            local-address {{ leaf_lo_prefix }}.{{ node_id }};
            import OVERLAY-LEAF-IMPORT;
            family evpn {
                signaling;
            }
            export OVERLAY-LEAF-EXPORT;
            vpn-apply-export;
            bfd-liveness-detection {
                minimum-interval 1000;
                multiplier 3;
                session-mode single-hop;
            }
{% for interface in spine_interfaces %}
            neighbor {{ spine_lo_prefix }}.{{ interface.peer_node_id }};
{% endfor %}
        }
    }
    evpn {
        encapsulation vxlan;
        extended-vni-list [ {% for vlan in vlans %}{{ vlan.vni }} {% endfor %} ];
        multicast-mode ingress-replication;
        vni-options {
{% for vlan in vlans %}
            vni {{ vlan.vni }} {
                vrf-target export target:{{ site_asn }}:{{ vlan.vni }};
            }
{% endfor %}
        }
    }
    igmp-snooping {
        vlan default;
    }
}
policy-options {
    policy-statement EVPN-VNI-IMPORT {
        term IMPORT-EVPN-ESI {
            from community EVPN-ESI;
            then accept;
        }
{% for vlan in vlans %}
        term IMPORT-VNI{{ vlan.vni }} {
            from community VNI{{ vlan.vni }};
            then accept;
        }
{% endfor %}
        term DEFAULT {
            then reject;
        }
    }
    policy-statement OVERLAY-LEAF-EXPORT {
        term DEFAULT {
            then {
                community add OVERLAY;
                accept;
            }
        }
    }
    policy-statement OVERLAY-LEAF-IMPORT {
        term NO-UNDERLAY {
            from {
                protocol bgp;
                community UNDERLAY;
            }
            then reject;
        }
        term DEFAULT {
            then accept;
        }
    }
    policy-statement PFE-LB {
        term DEFAULT {
            then {
                load-balance per-packet;
            }
        }
    }
    policy-statement UNDERLAY-EXPORT {
        term INFRA-LINKS {
            from {
                protocol direct;
                route-filter {{ leaf_lo_prefix }}.0/24 orlonger;
                route-filter 10.0.0.0/8 orlonger;
            }
            then {
                community add UNDERLAY;
                accept;
            }
        }
        term BGP {
        from {
            protocol bgp;
            community UNDERLAY;
        }
            then accept;
        }
        term DEFAULT {
            then reject;
        }
    }
    community EVPN-ESI members target:{{ site_asn }}:9999;
    community OVERLAY members 64700:7986;
    community UNDERLAY members 64700:8578;
{% for vlan in vlans %}
    community VNI{{ vlan.vni }} members target:{{ site_asn }}:{{ vlan.vni }};
{% endfor %}
}
switch-options {
    vtep-source-interface lo0.0;
    route-distinguisher {{ leaf_lo_prefix }}.{{ node_id }}:9999;
    vrf-import EVPN-VNI-IMPORT;
    vrf-target target:{{ site_asn }}:9999;
}
vlans {
    default {
        vlan-id 1;
    }
{% for vlan in vlans %}
    {{ vlan.name }} {
        vlan-id {{ vlan.vid }};
        vxlan {
            vni {{ vlan.vni }};
            ingress-node-replication;
        }
    }
{% endfor %}
}

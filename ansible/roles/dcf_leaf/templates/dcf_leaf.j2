/* Configuration automatically generated by Ansible */
system {
    host-name {{ hostname }};
    root-authentication {
        encrypted-password {{ root_pw_encrypted }}; ## SECRET-DATA
    }
    login {
        user {{ admin_user.name }} {
            uid 2001;
            class super-user;
            authentication {
                encrypted-password {{ admin_user.pw_encrypted }}; ## SECRET-DATA
            }
        }
    }
    services {
        ssh {
            root-login allow;
        }
        netconf {
            ssh;
        }
        rest {
            http {
                port 8080;
            }
            enable-explorer;
        }
    }
    syslog {
        user * {
            any emergency;
        }
        file messages {
            any notice;
            authorization info;
        }
        file interactive-commands {
            interactive-commands any;
        }
    }
    extensions {
        providers {
            juniper {
                license-type juniper deployment-scope commercial;
            }
        }
    }
}
interfaces {
{% for interface in interfaces %}
    xe-0/0/{{ interface.number }} {
        unit 0 {
            family ethernet-switching {
                interface-mode {{ interface.mode }};
                vlan {
                    members [ {% for vlan in interface.vlans %}{{ vlan }} {% endfor %} ];
                }
            }
        }
    }
{% endfor %}
    et-0/0/48 {
        description "et-0/0/48: Link to Spine1";
        unit 0 {
            family inet {
                address 10.{{ spine1.node_id }}.{{ node_id }}.2/30;
            }
            family mpls;
        }
    }
    et-0/0/49 {
        description "et-0/0/49: Link to Spine2";
        unit 0 {
            family inet {
                address 10.{{ spine2.node_id }}.{{ node_id }}.2/30;
            }
            family mpls;
        }
    }
{% if num_spines == 4 %}
    et-0/0/50 {
        description "et-0/0/50: Link to Spine3";
        unit 0 {
            family inet {
                address 10.{{ spine3.node_id }}.{{ node_id }}.2/30;
            }
            family mpls;
        }
    }
    et-0/0/51 {
        description "et-0/0/51: Link to Spine4";
        unit 0 {
            family inet {
                address 10.{{ spine4.node_id }}.{{ node_id }}.2/30;
            }
            family mpls;
        }
    }
{% endif %}
    em0 {
        unit 0 {
            family inet {
                address {{ mgt.prefix }}.{{ node_id }}/24;
            }
        }
    }
    lo0 {
        unit 0 {
            family inet {
                address {{ leaf_lo_prefix }}.{{ node_id }}/32;
            }
        }
    }
}
forwarding-options {
    storm-control-profiles default {
        all;
    }
}
routing-options {
    static {
        route {{ mgt.default_route }} next-hop {{ mgt.default_nh }};
    }
    router-id {{ leaf_lo_prefix }}.{{ node_id }};
    autonomous-system {{ site_asn }};
    forwarding-table {
        export PFE-LB;
    }
}
protocols {
    mpls {
        interface et-0/0/48.0;
        interface et-0/0/49.0;
    }
    bgp {
        group UNDERLAY {
            type external;
            family inet {
                labeled-unicast {
                    resolve-vpn;
                }
            }
            export UNDERLAY-EXPORT;
            local-as 65{{ node_id }};
            multipath multiple-as;
            neighbor 10.{{ spine1.node_id }}.{{ node_id }}.1 {
                peer-as 650{{ spine1.node_id }};
            }
            neighbor 10.{{ spine2.node_id }}.{{ node_id }}.1 {
                peer-as 650{{ spine1.node_id }};
            }
        }
        group OVERLAY {
            type internal;
            local-address {{ leaf_lo_prefix }}.{{ node_id }};
            import OVERLAY-LEAF-VPN-IMPORT;
            family inet-vpn {
                unicast;
            }
            family evpn {
                signaling;
            }
            neighbor {{ spine_lo_prefix }}.{{ spine1.node_id }};
            neighbor {{ spine_lo_prefix }}.{{ spine2.node_id }};
        }
    }
    evpn {
        encapsulation vxlan;
        extended-vni-list [ {% for vlan in vlans %}{{ vlan.vni }} {% endfor %} ];
        multicast-mode ingress-replication;
        vni-options {
{% for vlan in vlans %}
            vni {{ vlan.vni }} {
                vrf-target export target:{{ site_asn }}:{{ vlan.vni }};
            }
{% endfor %}
        }
    }
    igmp-snooping {
        vlan default;
    }
}
policy-options {
    policy-statement EVPN-VNI-IMPORT {
        term IMPORT-EVPN-ESI {
            from community EVPN-ESI;
            then accept;
        }
{% for vlan in vlans %}
        term IMPORT-VNI{{ vlan.vni }} {
            from community VNI{{ vlan.vni }};
            then accept;
        }
{% endfor %}
        term DEFAULT {
            then reject;
        }
    }
    policy-statement OVERLAY-LEAF-VPN-IMPORT {
        term NO-EVPN-TYPE-1-2-REMOTE {
            from {
                family evpn;
                next-hop [ 192.168.255.101 192.168.255.102 ];
                nlri-route-type [ 1 2 ];
            }
            then reject;
        }
        term DEFAULT {
            then accept;
        }
    }
    policy-statement PFE-LB {
        term DEFAULT {
            then {
                load-balance per-packet;
            }
        }
    }
    policy-statement UNDERLAY-EXPORT {
        term INFRA-LINKS {
            from {
                protocol direct;
                route-filter {{ leaf_lo_prefix }}.0/24 orlonger;
                route-filter 10.0.0.0/8 orlonger;
            }
            then accept;
        }
        term BGP {
            from protocol bgp;
            then accept;
        }
        term DEFAULT {
            then reject;
        }
    }
    community EVPN-ESI members target:{{ site_asn }}:9999;
{% for vlan in vlans %}
    community VNI{{ vlan.vni }} members target:{{ site_asn }}:{{ vlan.vni }};
{% endfor %}
}
switch-options {
    vtep-source-interface lo0.0;
    route-distinguisher {{ leaf_lo_prefix }}.{{ node_id }}:9999;
    vrf-import EVPN-VNI-IMPORT;
    vrf-target target:{{ site_asn }}:9999;
}
vlans {
    default {
        vlan-id 1;
    }
{% for vlan in vlans %}
    {{ vlan.name }} {
        vlan-id {{ vlan.vid }};
        vxlan {
            vni {{ vlan.vni }};
            ingress-node-replication;
        }
    }
{% endfor %}
}
